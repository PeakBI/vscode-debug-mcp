{
  "name": "vscode-debug-mcp",
  "displayName": "VSCode Debug MCP",
  "description": "Enable an MCP Client to directly debug code with breakpoints, expression evaluation, and program launching",
  "version": "0.3.1",
  "repository": "https://github.com/PeakBI/vscode-debug-mcp",
  "author": "Tom Preece",
  "publisher": "PeakBI",
  "icon": "images/vscode-debug-mcp-logo-1024.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-debug-mcp.restart",
        "title": "VSCode Debug MCP: (Re)Start Server",
        "icon": "$(debug-start)"
      },
      {
        "command": "vscode-debug-mcp.stop",
        "title": "VSCode Debug MCP: Stop Server",
        "icon": "$(debug-stop)"
      },
      {
        "command": "vscode-debug-mcp.copyStdioPath",
        "title": "VSCode Debug MCP: Copy Stdio Path",
        "icon": "$(copy)"
      },
      {
        "command": "vscode-debug-mcp.copySseAddress",
        "title": "VSCode Debug MCP: Copy SSE Address",
        "icon": "$(copy)"
      },
      {
        "command": "vscode-debug-mcp.copyClaudeCodeCommand",
        "title": "VSCode Debug MCP: Copy Claude Code Setup Command",
        "icon": "$(copy)"
      },
      {
        "command": "vscode-debug-mcp.setPort",
        "title": "VSCode Debug MCP: Set Port"
      },
      {
        "command": "vscode-debug-mcp.toggleAutostart",
        "title": "VSCode Debug MCP: Toggle Autostart"
      }
    ],
    "views": {
      "debug": [
        {
          "id": "mcpDebugView",
          "name": "MCP Debug Server"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "vscode-debug-mcp.restart",
          "when": "view == mcpDebugView && viewItem == serverStopped",
          "group": "inline"
        },
        {
          "command": "vscode-debug-mcp.stop",
          "when": "view == mcpDebugView && viewItem == serverRunning",
          "group": "inline"
        },
        {
          "command": "vscode-debug-mcp.copyStdioPath",
          "when": "view == mcpDebugView && viewItem == stdioPath",
          "group": "inline"
        },
        {
          "command": "vscode-debug-mcp.copySseAddress",
          "when": "view == mcpDebugView && viewItem == sseAddress",
          "group": "inline"
        },
        {
          "command": "vscode-debug-mcp.copyClaudeCodeCommand",
          "when": "view == mcpDebugView && viewItem == claudeCodeCommand",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "VSCode Debug MCP",
      "properties": {
        "mcpDebug.port": {
          "type": "number",
          "default": 4711,
          "description": "Port number for the debug server"
        },
        "mcpDebug.showServerPathOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show the server path on startup"
        },
        "mcpDebug.autostart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start 'VSCode Debug MCP' when opening VS Code"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "cd mcp && npm run build && cd - && node esbuild.js",
    "watch": "node esbuild.js --watch",
    "type-check": "tsc --noEmit",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.27.3",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  }
}
